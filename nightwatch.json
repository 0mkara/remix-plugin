{
  "src_folders": ["tests/e2e"],
  "output_folder": "reports",
  "test_settings": {
    "default": {
      "selenium_port": 9515,
      "selenium_host": "localhost",
      "default_path_prefix": "",
      "silent": true,

      "screenshots": {
        "enabled": true,
        "on_failure": true,
        "on_error": true,
        "path": "results/screenshots"
      },

      "desiredCapabilities": {
        "browserName": "chrome",
        "javascriptEnabled": true,
        "acceptSslCerts": true,
        "chromeOptions": {
          "args": ["start-maximized"]
        }
      }
    },
    "chrome": {
      "desiredCapabilities": {
        "browserName": "chrome"
      }
    }
  }
}
